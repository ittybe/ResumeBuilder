<Window x:Class="ResumeBuilderGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeBuilderGui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="Create" InputGestureText="Ctrl+N" Click="Create_Click"></MenuItem>
                <MenuItem Header="Open" InputGestureText="Ctrl+O" Click="Open_Click"></MenuItem>
                <MenuItem Header="Close all windows" InputGestureText="Ctrl+L" Click="Open_Click"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
